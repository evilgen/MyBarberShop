<table class = "table">
   <caption>Список клиентов BarberShop</caption>
   <thead>
     <tr>
       <th>Имя</th>
       <th>Телефон</th>
       <th>Дата и время приема</th>
       <th>Парикмахер</th>
       <th>Цвет окраски волос</th>
     </tr>
   </thead>
   <tbody>
     <% @results.each do |row| %>
        <tr>
          <td><%=row['Name']%></td>
          <td><%=row['Phone']%></td>
          <td><%=row['DateStamp']%></td>
          <td><%=row['Barber']%></td>
          <td><%=row['Color']%></td>
        </tr>
     <% end %>
   </tbody>
</table>